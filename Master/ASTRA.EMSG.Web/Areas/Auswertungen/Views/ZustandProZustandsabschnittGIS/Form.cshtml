@using ASTRA.EMSG.Common.Enums

@ReportViewHelpers.GisReportButtons(Html, (NetzErfassungsmodus)ViewBag.NetzErfassungsmodus)
@ReportViewHelpers.UndockButton(Html, (NetzErfassungsmodus)ViewBag.NetzErfassungsmodus, (ViewBag.IsInPopup ?? false))

@if (ViewBag.IsInPopup ?? false)
{
    @Html.Partial("ZustandProZustandsabschnittGrid", "ZustandProZustandsabschnittGIS")
}
else
{
    <div style="overflow: auto;">
        <div class="scrollable-grid">
            @Html.Partial("ZustandProZustandsabschnittGrid", "ZustandProZustandsabschnittGIS")
        </div>
    </div>
}
