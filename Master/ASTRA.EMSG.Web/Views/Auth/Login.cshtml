<html lang="en">
 <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>EMSG</title>
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/login.css")"  />

    <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
    <section class="container">
        <div class="login">
            <h1>Anmeldung - EMSG</h1>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <p>@Html.TextBoxFor(m => m.Email, new {@placeholder = "E-Mail"})</p>
                <p>@Html.PasswordFor(m => m.Password, new { @placeholder = "Passwort" })</p>
                <p class="remember_me">
            <!--         <label>
                        <input type="checkbox" name="remember_me" id="remember_me">
                        Remember me on this computer
                        </label> !-->
                </p>
                <p class="submit"><input type="submit" name="commit" value="Anmelden"></p>
            }
        </div>
        <div class="login-help">
            <!--      <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p> !-->
        </div>
    </section>
</body>
</html>