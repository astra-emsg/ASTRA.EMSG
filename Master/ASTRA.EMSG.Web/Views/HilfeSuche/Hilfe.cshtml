@using ASTRA.EMSG.Web.Infrastructure.Help
@using Resources
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @*Note: For Development and Testing*@
    @*<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE8">*@
    @*Note: For Deployed Version*@ 
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta charset="utf-8" />
    <title>Hilfe</title>
    <style type="text/css">
        body
        {
            margin: 0;
            font-size: 10pt;
            font-family: Arial, Helvetica, Sans-Serif;
            color: #333333;
            background-color: #fff;
        }
    </style>
    <script src="@Url.Content("~/Scripts/jquery-3.1.0.min.js")" type="text/javascript"></script>
</head>
<body>
    <div>
        <iframe id="iframe" src="@ViewBag.HelpUrl" onload="document.title=this.contentDocument? this.contentDocument.title : this.contentWindow.document.title;" style="overflow: scroll; border: 0; position:fixed; top:0; left:0; right:0; bottom:0; width:100%; height:100%"></iframe>
        <div style="background-color: transparent; position: fixed; right: 40px; top: 5px;">
            @Html.ActionLink(TextLocalization.HelpSearchLink, "Index", "HilfeSuche")
        </div>
    </div>
</body>
</html>
